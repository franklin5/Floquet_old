\begin_inset Formula \begin{eqnarray}
\left(k_{z}^{2}+\frac{q^{2}}{4}+k_{z}q+\lambda(k_{z}+\frac{q}{2})+h+a^{2}\right)u-i\lambda\frac{b}{AB}\int_{0}^{1}rdrJ_{0}(ar)J_{0}(br)\alpha-\Delta v & = & Eu\label{eq:bdg1-1-1}\\
