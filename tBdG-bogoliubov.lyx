 & = & -\frac{L}{(\frac{\kappa_{n}^{(m+1)}}{L})^{2}-(\frac{\kappa_{l}^{(m)}}{L})^{2}}J_{m+1}(\kappa_{l}^{(m)})\frac{\kappa_{n}^{(m+1)}}{2L}\left(J_{m}(\kappa_{n}^{(m+1)})-J_{m+2}(\kappa_{n}^{(m+1)})\right)\end{eqnarray*}

\end_inset

Then, we can further simplify coefficients of SOC term 
\begin_inset Formula \begin{eqnarray}
\mathcal{A}_{nl}^{(m)} & = & -(\frac{\sqrt{2}}{L})^{2}\frac{1}{|J_{m+2}(\kappa_{l}^{(m+1)})|}\frac{1}{|J_{m+1}(\kappa_{n}^{(m)})|}\nonumber \\
 & \times & \frac{\kappa_{l}^{(m+1)}}{L}\frac{L}{(\frac{\kappa_{n}^{(m)}}{L})^{2}-(\frac{\kappa_{l}^{(m+1)}}{L})^{2}}J_{m}(\kappa_{l}^{(m+1)})\frac{\kappa_{n}^{(m)}}{2L}\left(J_{m-1}(\kappa_{n}^{(m)})-J_{m+1}(\kappa_{n}^{(m)})\right)\nonumber \\
 & = & -\frac{1}{L}\frac{\kappa_{n}^{(m)}\kappa_{l}^{(m+1)}}{(\kappa_{n}^{(m)})^{2}-(\kappa_{l}^{(m+1)})^{2}}\frac{J_{m}(\kappa_{l}^{(m+1)})\left(J_{m-1}(\kappa_{n}^{(m)})-J_{m+1}(\kappa_{n}^{(m)})\right)}{|J_{m+2}(\kappa_{l}^{(m+1)})|\cdot|J_{m+1}(\kappa_{n}^{(m)})|},\quad\text{for }m\ge1\label{eq:I1}\\
