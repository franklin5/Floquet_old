\begin_inset Formula \begin{equation}
\left(\begin{array}{cccc}
m_{11}({\bf k}+\frac{q}{2}{\bf e}_{z}) & v_{1}k_{x}-iv_{2}k_{y} & 0 & -\Delta_{0}\\
v_{1}k_{x}+iv_{2}k_{y} & m_{22}({\bf k}+\frac{q}{2}{\bf e}_{z}) & \Delta_{0} & 0\\
0 & \Delta_{0} & m_{33}({\bf k}-\frac{q}{2}{\bf e}_{z}) & v_{1}k_{x}+iv_{2}k_{y}\\
-\Delta_{0} & 0 & v_{1}k_{x}-iv_{2}k_{y} & m_{44}({\bf k}-\frac{q}{2}{\bf e}_{z})\end{array}\right)\left(\begin{array}{c}
u_{{\bf k}}\\
\alpha_{{\bf k}}\\
\beta_{{\bf k}}\\
v_{{\bf k}}\end{array}\right)=E_{{\bf k}}\left(\begin{array}{c}
u_{{\bf k}}\\
\alpha_{{\bf k}}\\
\beta_{{\bf k}}\\
v_{{\bf k}}\end{array}\right)\label{eq:OmegaBdG}\end{equation}

