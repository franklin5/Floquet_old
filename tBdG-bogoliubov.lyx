\begin_inset Formula \begin{eqnarray*}
\left(\begin{array}{c}
u({\bf r})\\
\alpha({\bf r})\\
\beta({\bf r})\\
v({\bf r})\end{array}\right) & = & e^{ik_{z}z}\sum_{n=1}^{N_{max}}\left(\begin{array}{c}
\frac{u_{n}}{\sqrt{\mathcal{N}_{n}^{(-|m|)}}}J_{-|m|}(\kappa_{n}^{(-|m|)}\frac{r}{L})\\
\frac{\alpha_{n}}{\sqrt{\mathcal{N}_{n}^{(-|m|+1)}}}J_{-|m|+1}(\kappa_{n}^{(-|m|+1)}\frac{r}{L})e^{i\theta}\\
\frac{\beta_{n}}{\sqrt{\mathcal{N}_{n}^{(-|m|+1)}}}J_{-|m|+1}(\kappa_{n}^{(-|m|+1)}\frac{r}{L})e^{i\theta}\\
\frac{v_{n}}{\sqrt{\mathcal{N}_{n}^{(-|m|)}}}J_{-|m|}(\kappa_{n}^{(-|m|)}\frac{r}{L})\end{array}\right)\frac{e^{-i|m|\theta}}{\sqrt{2\pi}}\\
 & = & e^{ik_{z}z}\sum_{n=1}^{N_{max}}\left(\begin{array}{c}
\frac{u_{n}}{\sqrt{\mathcal{N}_{n}^{(|m|)}}}(-1)^{|m|}J_{|m|}(\kappa_{n}^{(|m|)}\frac{r}{L})\\
\frac{\alpha_{n}}{\sqrt{\mathcal{N}_{n}^{(|m|-1)}}}(-1)^{|m|-1}J_{|m|-1}(\kappa_{n}^{(|m|-1)}\frac{r}{L})e^{i\theta}\\
\frac{\beta_{n}}{\sqrt{\mathcal{N}_{n}^{(|m|-1)}}}(-1)^{|m|-1}J_{|m|-1}(\kappa_{n}^{(|m|-1)}\frac{r}{L})e^{i\theta}\\
\frac{v_{n}}{\sqrt{\mathcal{N}_{n}^{(|m|)}}}(-1)^{|m|}J_{|m|}(\kappa_{n}^{(|m|)}\frac{r}{L})\end{array}\right)\frac{e^{-i|m|\theta}}{\sqrt{2\pi}}\end{eqnarray*}

\end_inset

where relation 
\begin_inset Formula $J_{-m}(x)=(-1)^{m}J_{m}(x)$
\end_inset

 and 
\begin_inset Formula $\kappa_{n}^{(-m)}=\kappa_{n}^{(m)}$
\end_inset

 has been used, and normalization is given by
\begin_inset Formula \begin{eqnarray}
\mathcal{N}_{n}^{(-|m|)} & = & \int_{0}^{L}J_{-|m|}(\kappa_{n}^{(-|m|)}\frac{r}{L})J_{-|m|}(\kappa_{n}^{(-|m|)}\frac{r}{L})rdr\\
 & = & (-1)^{2|m|}\int_{0}^{L}J_{|m|}(\kappa_{n}^{(|m|)}\frac{r}{L})J_{|m|}(\kappa_{n}^{(|m|)}\frac{r}{L})rdr\\
 & = & \frac{1}{2}L^{2}\left(J_{|m|+1}(\kappa_{n}^{(|m|)})\right)^{2}\\
 & = & \mathcal{N}_{n}^{(|m|)}\end{eqnarray}

\end_inset

Following the above procedures, we obtain equations for coefficients ( 
\begin_inset Formula $m\le-1$
\end_inset

 ) 
\begin_inset Formula \begin{eqnarray}
\mathcal{L}_{11n}^{(m)}u_{n}-iv\sum_{l=1}^{N_{max}}\mathcal{C}_{nl}^{(m)}\alpha_{l}-\Delta v_{n} & = & Eu_{n}\label{eq:bdg1-2-1-1}\\
iv\sum_{l=1}^{N_{max}}\mathcal{D}_{nl}^{(m)}u_{l}+\mathcal{L}_{22n}^{(m)}\alpha_{n}+\Delta\beta_{n} & = & E\alpha_{n}\label{eq:bdg1-2-1-2}\\
\Delta\alpha_{n}+\mathcal{L}_{33n}^{(m)}\beta_{n}+iv\sum_{l=1}^{N_{max}}\mathcal{D}_{nl}^{(m)}v_{l} & = & E\beta_{n}\label{eq:bdg1-2-1-3}\\
-\Delta u_{n}-iv\sum_{l=1}^{N_{max}}\mathcal{C}_{nl}^{(m)}\beta_{l}+\mathcal{L}_{44n}^{(m)}v_{n} & = & Ev_{n}\label{eq:bdg1-2-1-4}\end{eqnarray}

\end_inset

where
\begin_inset Formula \begin{eqnarray}
\mathcal{L}_{11n}^{(m)} & = & \left(k_{z}^{2}+\frac{q^{2}}{4}+k_{z}q+v_{3}(k_{z}+\frac{q}{2})+h+\left(\frac{\kappa_{n}^{(|m|)}}{L}\right)^{2}\right)\\
\mathcal{L}_{22n}^{(m)} & = & \left(k_{z}^{2}+\frac{q^{2}}{4}+k_{z}q-v_{3}(k_{z}+\frac{q}{2})-h+\left(\frac{\kappa_{n}^{(|m|-1)}}{L}\right)^{2}\right)\\
\mathcal{L}_{33n}^{(m)} & = & -\left(k_{z}^{2}+\frac{q^{2}}{4}-k_{z}q-v_{3}(k_{z}-\frac{q}{2})+h+\left(\frac{\kappa_{n}^{(|m|-1)}}{L}\right)^{2}\right)\\
\mathcal{L}_{44n}^{(m)} & = & -\left(k_{z}^{2}+\frac{q^{2}}{4}-k_{z}q+v_{3}(k_{z}-\frac{q}{2})-h+\left(\frac{\kappa_{n}^{(|m|)}}{L}\right)^{2}\right)\\
\mathcal{C}_{nl}^{(m)} & = & \frac{\kappa_{l}^{(|m|-1)}}{L}\frac{\int_{0}^{L}rJ_{|m|}(\kappa_{n}^{(|m|)}\frac{r}{L})J_{|m|}(\kappa_{l}^{(|m|-1)}\frac{r}{L})dr}{\sqrt{\mathcal{N}_{l}^{(|m|-1)}}\sqrt{\mathcal{N}_{n}^{(|m|)}}}\\
\mathcal{D}_{nl}^{(m)} & = & \frac{\kappa_{l}^{(|m|)}}{L}\frac{\int_{0}^{L}rJ_{|m|-1}(\kappa_{n}^{|m|-1}\frac{r}{L})J_{|m|-1}(\kappa_{l}^{(|m|)}\frac{r}{L})dr}{\sqrt{\mathcal{N}_{l}^{(|m|)}}\sqrt{\mathcal{N}_{n}^{(|m|-1)}}}\end{eqnarray}

\end_inset

which will be evaluated as before, 
\begin_inset Formula \begin{eqnarray}
\mathcal{C}_{nl}^{(m)} & = & -\frac{1}{L}\frac{\kappa_{n}^{(|m|)}\kappa_{l}^{(|m|-1)}}{(\kappa_{n}^{(|m|)})^{2}-(\kappa_{l}^{(|m|-1)})^{2}}\frac{J_{|m|}(\kappa_{l}^{(|m|-1)})\left(J_{|m|-1}(\kappa_{n}^{(|m|)})-J_{|m|+1}(\kappa_{n}^{(|m|)})\right)}{|J_{|m|}(\kappa_{l}^{(|m|-1)})|\cdot|J_{|m|+1}(\kappa_{n}^{(|m|)})|},\\
\mathcal{D}_{nl}^{(m)} & = & -\frac{1}{L}\frac{\kappa_{l}^{(|m|)}\kappa_{n}^{(|m|-1)}}{(\kappa_{n}^{|m|-1})^{2}-(\kappa_{l}^{(|m|)})^{2}}\frac{J_{|m|-1}(\kappa_{l}^{(|m|)})\left(J_{|m|-2}(\kappa_{n}^{|m|-1})-J_{|m|}(\kappa_{n}^{|m|-1})\right)}{|J_{|m|+1}(\kappa_{l}^{(|m|)})|\cdot|J_{|m|}(\kappa_{n}^{(|m|-1)})|},\quad m\le-2\\
 & = & -\frac{2}{L}\frac{\kappa_{l}^{(|m|)}\kappa_{n}^{(|m|-1)}}{(\kappa_{n}^{|m|-1})^{2}-(\kappa_{l}^{(|m|)})^{2}}\frac{J_{|m|-1}(\kappa_{l}^{(|m|)})\left(-J_{|m|}(\kappa_{n}^{|m|-1})\right)}{|J_{|m|+1}(\kappa_{l}^{(|m|)})|\cdot|J_{|m|}(\kappa_{n}^{(|m|-1)})|},\quad m=-1\end{eqnarray}

\end_inset

The self-adjoincy can be verified by interchanging 
