\begin_layout Standard
We start from the Hamiltonian with the general form of spin-orbit coupling
 (SOC) 
\begin_inset Formula $H_{SOC}=v_{1}\sigma_{x}k_{x}+v_{2}\sigma_{y}k_{y}+v_{3}\sigma_{z}k_{z}$
\end_inset

 and Zeeman field in z-direction, 
\begin_inset Formula $H=H_{0}+H_{int}$
\end_inset

, where (
\begin_inset Formula $v_{i}$
\end_inset

 are real constants, 
\begin_inset Formula $i=1,2,3$
\end_inset

) 
\begin_inset Formula \begin{eqnarray}
H_{0} & = & \int d{\bf x}\left[\begin{array}{cc}
\psi_{\uparrow}^{\dagger}({\bf x}) & \psi_{\downarrow}^{\dagger}({\bf x})\end{array}\right]\left[\begin{array}{cc}
\xi_{{\bf k}}+v_{3}k_{z}+h & v_{1}k_{x}-iv_{2}k_{y}\\
v_{1}k_{x}+iv_{2}k_{y} & \xi_{k}-v_{3}k_{z}-h\end{array}\right]\left[\begin{array}{c}
\psi_{\uparrow}({\bf x})\\
\psi_{\downarrow}({\bf x})\end{array}\right]\\
H_{int} & = & U_{0}\int d{\bf x}\psi_{\uparrow}^{\dagger}({\bf x})\psi_{\downarrow}^{\dagger}({\bf x})\psi_{\downarrow}({\bf x})\psi_{\uparrow}({\bf x})\end{eqnarray}

\end_inset

And we write Heisenberg equation of motion (EOM) as, (
\begin_inset Formula $\hbar=1$
\end_inset

) (remember that 
\begin_inset Formula $[A,BC]=\{A,B\}C-B\{A,C\}$
\end_inset

 for Fermions while 
\begin_inset Formula $[A,BC]=[A,B]C+B[A,C]$
\end_inset

 for Bosons)
\begin_inset Formula \begin{eqnarray}
i\frac{\partial}{\partial t}\psi_{\uparrow}({\bf x}) & = & (\xi_{{\bf k}}+v_{3}k_{z}+h)\psi_{\uparrow}({\bf x})+(v_{1}k_{x}-iv_{2}k_{y})\psi_{\downarrow}({\bf x})+U_{0}\psi_{\downarrow}^{\dagger}({\bf x})\psi_{\downarrow}({\bf x})\psi_{\uparrow}({\bf x})\nonumber \\
 & \approx & (\xi_{{\bf k}}+v_{3}k_{z}+h)\psi_{\uparrow}({\bf x})+(v_{1}k_{x}-iv_{2}k_{y})\psi_{\downarrow}({\bf x})-\Delta({\bf x})\psi_{\downarrow}^{\dagger}({\bf x})\label{eq:up}\\
i\frac{\partial}{\partial t}\psi_{\downarrow}({\bf x}) & = & (\xi_{{\bf k}}-v_{3}k_{z}-h)\psi_{\downarrow}({\bf x})+(v_{1}k_{x}+iv_{2}k_{y})\psi_{\uparrow}({\bf x})-U_{0}\psi_{\uparrow}^{\dagger}({\bf x})\psi_{\downarrow}({\bf x})\psi_{\uparrow}({\bf x})\nonumber \\
 & \approx & (\xi_{{\bf k}}-v_{3}k_{z}-h)\psi_{\downarrow}({\bf x})+(v_{1}k_{x}+iv_{2}k_{y})\psi_{\uparrow}({\bf x})+\Delta({\bf x})\psi_{\uparrow}^{\dagger}({\bf x})\label{eq:dn}\end{eqnarray}

\end_inset

where approximation comes from mean-field approximation by defining order
 parameter 
\begin_inset Formula $\Delta({\bf x})=-U_{0}\langle\psi_{\downarrow}\psi_{\uparrow}\rangle$
\end_inset

.
 We solve the EOM in terms of Bogoliubov transformation,
\begin_inset Formula \begin{equation}
\psi_{\sigma}({\bf x})=\frac{1}{V}\sum_{{\bf k}}\left[u_{{\bf k}\sigma}({\bf x},t)c_{{\bf k}\sigma}+v_{{\bf k}\bar{\sigma}}^{\ast}({\bf x},t)c_{{\bf k}\bar{\sigma}}^{\dagger}+\alpha_{{\bf k}\bar{\sigma}}({\bf x},t)c_{{\bf k}\bar{\sigma}}+\beta_{{\bf k}\sigma}^{\ast}({\bf x},t)c_{{\bf k}\sigma}^{\dagger}\right]\end{equation}

\end_inset

where 
\begin_inset Formula $\sigma=\uparrow,\downarrow$
\end_inset

 and correspondingly 
\begin_inset Formula $\bar{\sigma}=\downarrow,\uparrow$
\end_inset

, 
\begin_inset Formula \[
u_{{\bf k}\sigma}({\bf x},t)=u_{{\bf k}\sigma}({\bf x})e^{-iE_{{\bf k}\sigma}t},v_{{\bf k}\sigma}({\bf x},t)=v_{{\bf k}\sigma}({\bf x})e^{-iE_{{\bf k}\sigma}t},\alpha_{{\bf k}\sigma}({\bf x},t)=\alpha_{{\bf k}\sigma}({\bf x})e^{-iE_{{\bf k}\sigma}t},\beta{}_{{\bf k}\sigma}({\bf x},t)=\beta_{{\bf k}\sigma}({\bf x})e^{-iE_{{\bf k}\sigma}t}\]

\end_inset


\begin_inset Formula \[
u_{{\bf k}\sigma}^{\ast}({\bf x},t)=u_{{\bf k}\sigma}^{\ast}({\bf x})e^{+iE_{{\bf k}\sigma}t},v_{{\bf k}\sigma}^{\ast}({\bf x},t)=v_{{\bf k}\sigma}^{\ast}({\bf x})e^{+iE_{{\bf k}\sigma}t},\alpha_{{\bf k}\sigma}^{\ast}({\bf x},t)=\alpha_{{\bf k}\sigma}^{\ast}({\bf x})e^{+iE_{{\bf k}\sigma}t},\beta{}_{{\bf k}\sigma}^{\ast}({\bf x},t)=\beta_{{\bf k}\sigma}^{\ast}({\bf x})e^{+iE_{{\bf k}\sigma}t}\]

\end_inset

 Denote 
\begin_inset Formula \begin{eqnarray*}
h_{0}^{+} & = & \xi_{{\bf k}}+v_{3}k_{z}+h\\
h_{0}^{-} & = & \xi_{{\bf k}}-v_{3}k_{z}-h\\
\Lambda & = & v_{1}k_{x}-iv_{2}k_{y}\end{eqnarray*}

\end_inset

Then from Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:up"

\end_inset

, we have
\begin_inset Formula \begin{eqnarray}
 &  & i\sum_{{\bf k}}\left[\dot{u}_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}+\dot{v}_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}+\dot{\alpha}_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+\dot{\beta}_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}\right]\nonumber \\
 & = & \sum_{{\bf k}}\left[h_{0}^{+}u_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}+h_{0}^{+}v_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}+h_{0}^{+}\alpha_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+h_{0}^{+}\beta_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}\right]\nonumber \\
 & + & \sum_{{\bf k}}\left[\Lambda u_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+\Lambda v_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}+\Lambda\alpha_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}+\Lambda\beta_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}\right]\nonumber \\
 & + & \sum_{{\bf k}}\left[-\Delta u_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}-\Delta v_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}-\Delta\alpha_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}-\Delta\beta_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}\right]\label{eq:up-bog}\end{eqnarray}

\end_inset


\begin_inset Formula \begin{eqnarray}
 &  & i\sum_{{\bf k}}\left[\dot{u}_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+\dot{v}_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}+\dot{\alpha}_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}+\dot{\beta}_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}\right]\nonumber \\
 & = & \sum_{{\bf k}}\left[h_{0}^{-}u_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+h_{0}^{-}v_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}+h_{0}^{-}\alpha_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}+h_{0}^{-}\beta_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}\right]\nonumber \\
 & + & \sum_{{\bf k}}\left[\Lambda^{\dagger}u_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}+\Lambda^{\dagger}v_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}+\Lambda^{\dagger}\alpha_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+\Lambda^{\dagger}\beta_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}\right]\nonumber \\
 & + & \sum_{{\bf k}}\left[\Delta u_{{\bf k}\uparrow}^{\ast}({\bf x})c_{{\bf k}\uparrow}^{\dagger}+\Delta v_{{\bf k}\downarrow}({\bf x})c_{{\bf k}\downarrow}+\Delta\alpha_{{\bf k}\downarrow}^{\ast}({\bf x})c_{{\bf k}\downarrow}^{\dagger}+\Delta\beta_{{\bf k}\uparrow}({\bf x})c_{{\bf k}\uparrow}\right]\label{eq:dn-bog}\end{eqnarray}

\end_inset

From Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:up-bog"

\end_inset

, we have 
\begin_inset Formula \begin{eqnarray*}
i\dot{u}_{{\bf k}\uparrow}({\bf x}) & = & h_{0}^{+}u_{{\bf k}\uparrow}({\bf x})+\Lambda\alpha_{{\bf k}\uparrow}({\bf x})-\Delta v_{{\bf k}\uparrow}({\bf x})\\
i\dot{v}_{{\bf k}\downarrow}^{\ast}({\bf x}) & = & h_{0}^{+}v_{{\bf k}\downarrow}^{\ast}({\bf x})+\Lambda\beta_{{\bf k}\downarrow}^{\ast}({\bf x})-\Delta u_{{\bf k}\downarrow}^{\ast}({\bf x})\Rightarrow-i\dot{v}_{{\bf k}\downarrow}({\bf x})=(h_{0}^{+})^{\ast}v_{{\bf k}\downarrow}({\bf x})+\Lambda^{\ast}\beta_{{\bf k}\downarrow}({\bf x})-\Delta^{\ast}u_{{\bf k}\downarrow}({\bf x})\\
i\dot{\alpha}_{{\bf k}\downarrow}({\bf x}) & = & h_{0}^{+}\alpha_{{\bf k}\downarrow}({\bf x})+\Lambda u_{{\bf k}\downarrow}({\bf x})-\Delta\beta_{{\bf k}\downarrow}({\bf x})\\
i\dot{\beta}_{{\bf k}\uparrow}^{\ast}({\bf x}) & = & h_{0}^{+}\beta_{{\bf k}\uparrow}^{\ast}({\bf x})+\Lambda v_{{\bf k}\uparrow}^{\ast}({\bf x})-\Delta\alpha_{{\bf k}\uparrow}^{\ast}({\bf x})\Rightarrow-i\dot{\beta}_{{\bf k}\uparrow}({\bf x})=(h_{0}^{+})^{\ast}\beta_{{\bf k}\uparrow}({\bf x})+\Lambda^{\ast}v_{{\bf k}\uparrow}({\bf x})-\Delta^{\ast}\alpha_{{\bf k}\uparrow}({\bf x})\\
i\dot{u}_{{\bf k}\downarrow}({\bf x}) & = & h_{0}^{-}u_{{\bf k}\downarrow}({\bf x})+\Lambda^{\dagger}\alpha_{{\bf k}\downarrow}({\bf x})+\Delta v_{{\bf k}\downarrow}({\bf x})\\
i\dot{v}_{{\bf k}\uparrow}^{\ast}({\bf x}) & = & h_{0}^{-}v_{{\bf k}\uparrow}^{\ast}({\bf x})+\Lambda^{\dagger}\beta_{{\bf k}\uparrow}^{\ast}({\bf x})+\Delta u_{{\bf k}\uparrow}^{\ast}({\bf x})\Rightarrow-i\dot{v}_{{\bf k}\uparrow}({\bf x})=(h_{0}^{-})^{\ast}v_{{\bf k}\uparrow}({\bf x})+(\Lambda^{\dagger})^{\ast}\beta_{{\bf k}\uparrow}({\bf x})+\Delta^{\ast}u_{{\bf k}\uparrow}({\bf x})\\
i\dot{\alpha}_{{\bf k}\uparrow}({\bf x}) & = & h_{0}^{-}\alpha_{{\bf k}\uparrow}({\bf x})+\Lambda^{\dagger}u_{{\bf k}\uparrow}({\bf x})+\Delta\beta_{{\bf k}\uparrow}({\bf x})\\
i\dot{\beta}_{{\bf k}\downarrow}^{\ast}({\bf x}) & = & h_{0}^{-}\beta_{{\bf k}\downarrow}^{\ast}({\bf x})+\Lambda^{\dagger}v_{{\bf k}\downarrow}^{\ast}({\bf x})+\Delta\alpha_{{\bf k}\downarrow}^{\ast}({\bf x})\Rightarrow-i\dot{\beta}_{{\bf k}\downarrow}({\bf x})=(h_{0}^{-})^{\ast}\beta_{{\bf k}\downarrow}({\bf x})+(\Lambda^{\dagger})^{\ast}v_{{\bf k}\downarrow}({\bf x})+\Delta^{\ast}\alpha_{{\bf k}\downarrow}({\bf x})\end{eqnarray*}

\end_inset

where we have used 
\begin_inset Formula $\Lambda^{\dagger}=v_{1}k_{x}+iv_{2}k_{y}$
\end_inset

, 
\begin_inset Formula $\Lambda^{\ast}=-(v_{1}k_{x}+iv_{2}k_{y})$
\end_inset

, 
\begin_inset Formula $(\Lambda^{\dagger})^{\ast}=-v_{1}k_{x}+iv_{2}k_{y}$
\end_inset

 (note: 
\begin_inset Formula $k=i\hbar\partial/\partial x$
\end_inset

, 
\begin_inset Formula $k^{\dagger}=k$
\end_inset

, 
\begin_inset Formula $k^{\ast}=-k$
\end_inset

, so 
\begin_inset Formula $k^{\dagger}=-k^{\ast}$
\end_inset

).
 
\end_layout

