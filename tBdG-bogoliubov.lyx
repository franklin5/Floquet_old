\begin_inset Formula \begin{eqnarray}
-(\frac{1}{r}\frac{\partial}{\partial r}(r\frac{\partial}{\partial r})+\frac{1}{r^{2}}\frac{\partial^{2}}{\partial\theta^{2}})J_{0}(ar) & = & a^{2}J_{0}(ar)\\
-(\frac{1}{r}\frac{\partial}{\partial r}(r\frac{\partial}{\partial r})+\frac{1}{r^{2}}\frac{\partial^{2}}{\partial\theta^{2}})J_{1}(br) & = & b^{2}J_{1}(br)\\
-\lambda e^{-i\theta}(i\partial_{r}+\frac{1}{r}\partial_{\theta})\left(J_{1}(br)e^{i\theta}\right) & = & -\lambda e^{-i\theta}\left(i\frac{b}{2}(J_{0}(br)-J_{2}(br))e^{i\theta}+\frac{i}{r}J_{1}(br)e^{i\theta}\right)\nonumber \\
 & = & -i\lambda\left(\frac{J_{0}(br)-J_{2}(br)}{2}+\frac{1}{r}J_{1}(br)\right)\nonumber \\
 & = & -i\lambda\left(\frac{b}{2}\left(J_{0}(br)-J_{2}(br)\right)+\frac{1}{r}J_{1}(br)\right)\nonumber \\
 & = & -i\lambda\left(\frac{b}{2}\left(J_{0}(br)-J_{2}(br)\right)+\frac{b}{2}\left(J_{2}(br)+J_{0}(br)\right)\right)\label{eq:specificrecursion}\\
 & = & -i\lambda bJ_{0}(br)\\
ve^{i\theta}(-i\partial_{r}+\frac{1}{r}\partial_{\theta})J_{0}(ar) & = & \lambda e^{i\theta}(-i(-a)J_{1}(ar))\nonumber \\
 & = & i\lambda ae^{i\theta}J_{1}(ar)\end{eqnarray}

