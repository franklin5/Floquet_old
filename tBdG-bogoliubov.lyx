 & \equiv & -U_{0}\frac{1}{V}\sum_{{\bf k}}{}'\left[u_{{\bf k}}({\bf x})v_{{\bf k}}^{\ast}({\bf x})f(E_{{\bf k}})+\alpha_{{\bf k}}({\bf x})\beta_{{\bf k}}^{\ast}({\bf x})f(-E_{{\bf k}})\right]\label{eq:Delta-(1)}\\
n_{\uparrow}({\bf x}) & = & \frac{1}{V}\sum_{{\bf k}}{}'\left[|u_{{\bf k}\uparrow}({\bf x})|^{2}f(E_{{\bf k}\uparrow})+|\beta_{{\bf k}\uparrow}({\bf x})|^{2}f(-E_{{\bf k}\uparrow})\right]\nonumber \\
 & \equiv & \frac{1}{V}\sum_{{\bf k}}{}'\left[|u_{{\bf k}}({\bf x})|^{2}f(E_{{\bf k}})+|\beta_{{\bf k}}({\bf x})|^{2}f(-E_{{\bf k}})\right]\label{eq:nup-(1)}\\
n_{\downarrow}({\bf x}) & = & \frac{1}{V}\sum_{{\bf k}}{}'\left[|v_{{\bf k}\uparrow}({\bf x})|^{2}f(-E_{{\bf k}\uparrow})+|\alpha_{{\bf k}\uparrow}({\bf x})|^{2}f(E_{{\bf k}\uparrow})\right]\nonumber \\
 & = & \frac{1}{V}\sum_{{\bf k}}{}'\left[|v_{{\bf k}}({\bf x})|^{2}f(-E_{{\bf k}})+|\alpha_{{\bf k}}({\bf x})|^{2}f(E_{{\bf k}})\right]\label{eq:ndn-(1)}\end{eqnarray}

\end_inset

Denote
\begin_inset Formula \begin{eqnarray*}
m_{11}({\bf k}) & = & \xi_{{\bf k}}+v_{3}k_{z}+h\\
m_{22}({\bf k}) & = & \xi_{{\bf k}}-v_{3}k_{z}-h\\
m_{33}({\bf k}) & = & -\xi_{{\bf k}}+v_{3}k_{z}-h\\
m_{44}({\bf k}) & = & -\xi_{{\bf k}}-v_{3}k_{z}+h\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
For the homogeneous system we study here, we use plane-wave as the basis
 and wavefunctions take the following form,
\begin_inset Formula \begin{equation}
\left(\begin{array}{c}
u_{{\bf k}}({\bf x})\\
\alpha_{{\bf k}}({\bf x})\\
\beta_{{\bf k}}({\bf x})\\
v_{{\bf k}}({\bf x})\end{array}\right)=\left(\begin{array}{c}
u_{{\bf k}}e^{+iqz/2}\\
\alpha_{{\bf k}}e^{+iqz/2}\\
\beta_{{\bf k}}e^{-iqz/2}\\
v_{{\bf k}}e^{-iqz/2}\end{array}\right)e^{i{\bf k}\cdot{\bf x}}\end{equation}

\end_inset

Don't forget the momentum operator is yet to be operated upon plane-wave
 states.
 For instance, 
\begin_inset Formula \begin{eqnarray}
E_{{\bf k}}u_{{\bf k}}e^{i({\bf k}+\frac{q}{2}{\bf e}_{z})\cdot x} & = & m_{11}(\hat{{\bf k}})u_{{\bf k}}e^{i({\bf k}+\frac{q}{2}{\bf e}_{z})\cdot x}+\Lambda(\hat{{\bf k}})\alpha_{{\bf k}}e^{i({\bf k}+\frac{q}{2}{\bf e}_{z})\cdot x}-\Delta({\bf x})v_{{\bf k}}e^{i({\bf k}-\frac{q}{2}{\bf e}_{z})\cdot x}\nonumber \\
 & = & m_{11}({\bf k}+\frac{q}{2}{\bf e}_{z})u_{{\bf k}}e^{i({\bf k}+\frac{q}{2}{\bf e}_{z})\cdot x}+(v_{1}k_{x}-iv_{2}k_{y})\alpha_{{\bf k}}e^{i({\bf k}+\frac{q}{2}{\bf e}_{z})\cdot x}-\Delta({\bf x})v_{{\bf k}}e^{i({\bf k}-\frac{q}{2}{\bf e}_{z})\cdot x}\nonumber \\
 & \Downarrow\nonumber \\
E_{{\bf k}}u_{{\bf k}} & = & m_{11}({\bf k}+\frac{q}{2}{\bf e}_{z})u_{{\bf k}}+(v_{1}k_{x}-iv_{2}k_{y})\alpha_{{\bf k}}-\Delta({\bf x})e^{-iqz}v_{{\bf k}}\end{eqnarray}

\end_inset

And similarly, we have other three terms,
\begin_inset Formula \begin{eqnarray}
E_{{\bf k}}\alpha_{{\bf k}} & = & (v_{1}k_{x}+iv_{2}k_{y})u_{{\bf k}}+m_{22}({\bf k}+\frac{q}{2}{\bf e}_{z})\alpha_{{\bf k}}+\Delta({\bf x})e^{-iqz}\beta_{{\bf k}}\\
E_{{\bf k}}\beta_{{\bf k}} & = & \Delta^{\ast}({\bf x})e^{+iqz}\alpha_{{\bf k}}+m_{33}({\bf k}-\frac{q}{2}{\bf e}_{z})\beta_{{\bf k}}+(v_{1}k_{x}+iv_{2}k_{y})v_{{\bf k}}\\
E_{{\bf k}}v_{{\bf k}} & = & -\Delta^{\ast}({\bf x})u_{{\bf k}}e^{+iqz}+(v_{1}k_{x}-iv_{2}k_{y})\beta_{{\bf k}}+m_{44}({\bf k}-\frac{q}{2}{\bf e}_{z})v_{{\bf k}}\end{eqnarray}

\end_inset

Putting everything together, we further have
\begin_inset Formula \begin{equation}
\mathcal{M}\left(\begin{array}{c}
u_{{\bf k}}\\
\alpha_{{\bf k}}\\
\beta_{{\bf k}}\\
v_{{\bf k}}\end{array}\right)=E_{{\bf k}}\left(\begin{array}{c}
u_{{\bf k}}\\
\alpha_{{\bf k}}\\
\beta_{{\bf k}}\\
v_{{\bf k}}\end{array}\right)\label{eq:mathcalM}\end{equation}

\end_inset


