\end_inset

And normalization is given by 
\begin_inset Formula $\int d{\bf x}\left[|u_{{\bf k}\sigma}({\bf x})|^{2}+|\alpha_{{\bf k}\sigma}({\bf x})|^{2}+|\beta_{{\bf k}\sigma}({\bf x})|^{2}+|v_{{\bf k}\sigma}({\bf x})|^{2}\right]=1$
\end_inset

.
 
\begin_inset Formula \begin{eqnarray*}
\Delta({\bf x}) & = & -U_{0}\langle\psi_{\downarrow}({\bf x})\psi_{\uparrow}({\bf x})\rangle\\
 & = & -U_{0}\frac{1}{V}\sum_{{\bf k}}\left[u_{{\bf k}\downarrow}({\bf x})v_{{\bf k}\downarrow}^{\ast}({\bf x})\langle c_{{\bf k}\downarrow}c_{{\bf k}\downarrow}^{\dagger}\rangle+u_{{\bf k}\uparrow}({\bf x})v_{{\bf k}\uparrow}^{\ast}({\bf x})\langle c_{{\bf k}\uparrow}^{\dagger}c_{{\bf k}\uparrow}\rangle+\alpha_{{\bf k}\uparrow}({\bf x})\beta_{{\bf k}\uparrow}^{\ast}({\bf x})\langle c_{{\bf k}\uparrow}c_{{\bf k}\uparrow}^{\dagger}\rangle+\alpha_{{\bf k}\downarrow}({\bf x})\beta_{{\bf k}\downarrow}^{\ast}({\bf x})\langle c_{{\bf k}\downarrow}^{\dagger}c_{{\bf k}\downarrow}\rangle\right]\\
 & = & -U_{0}\frac{1}{V}\sum_{{\bf k}}{}'\left[u_{{\bf k}\downarrow}({\bf x})v_{{\bf k}\downarrow}^{\ast}({\bf x})f(-E_{{\bf k}\downarrow})+u_{{\bf k}\uparrow}({\bf x})v_{{\bf k}\uparrow}^{\ast}({\bf x})f(E_{{\bf k}\uparrow})+\alpha_{{\bf k}\uparrow}({\bf x})\beta_{{\bf k}\uparrow}^{\ast}({\bf x})f(-E_{{\bf k}\uparrow})+\alpha_{{\bf k}\downarrow}({\bf x})\beta_{{\bf k}\downarrow}^{\ast}({\bf x})f(E_{{\bf k}\downarrow})\right]\\
n_{\uparrow}({\bf x}) & = & \langle\psi_{\uparrow}^{\dagger}({\bf x})\psi_{\uparrow}({\bf x})\rangle\\
 & = & \frac{1}{V}\sum_{{\bf k}}\left[|u_{{\bf k}\uparrow}({\bf x})|^{2}\langle c_{{\bf k}\uparrow}^{\dagger}c_{{\bf k}\uparrow}\rangle+|v_{{\bf k}\downarrow}({\bf x})|^{2}\langle c_{{\bf k}\downarrow}c_{{\bf k}\downarrow}^{\dagger}\rangle+|\alpha_{{\bf k}\downarrow}({\bf x})|^{2}\langle c_{{\bf k}\downarrow}^{\dagger}c_{{\bf k}\downarrow}\rangle+|\beta_{{\bf k}\uparrow}({\bf x})|^{2}\langle c_{{\bf k}\uparrow}^{\dagger}c_{{\bf k}\uparrow}\rangle\right]\\
 & = & \frac{1}{V}\sum_{{\bf k}}{}'\left[|u_{{\bf k}\uparrow}({\bf x})|^{2}f(E_{{\bf k}\uparrow})+|v_{{\bf k}\downarrow}({\bf x})|^{2}f(-E_{{\bf k}\downarrow})+|\alpha_{{\bf k}\downarrow}({\bf x})|^{2}f(E_{{\bf k}\downarrow})+|\beta_{{\bf k}\uparrow}({\bf x})|^{2}f(-E_{{\bf k}\uparrow})\right]\\
n_{\downarrow}({\bf x}) & = & \langle\psi_{\downarrow}^{\dagger}({\bf x})\psi_{\downarrow}({\bf x})\rangle\\
 & = & \frac{1}{V}\sum_{{\bf k}}\left[|u_{{\bf k}\downarrow}({\bf x})|^{2}\langle c_{{\bf k}\downarrow}^{\dagger}c_{{\bf k}\downarrow}\rangle+|v_{{\bf k}\uparrow}({\bf x})|^{2}\langle c_{{\bf k}\uparrow}c_{{\bf k}\uparrow}^{\dagger}\rangle+|\alpha_{{\bf k}\uparrow}({\bf x})|^{2}\langle c_{{\bf k}\uparrow}^{\dagger}c_{{\bf k}\uparrow}\rangle+|\beta_{{\bf k}\downarrow}({\bf x})|^{2}\langle c_{{\bf k}\downarrow}^{\dagger}c_{{\bf k}\downarrow}\rangle\right]\\
